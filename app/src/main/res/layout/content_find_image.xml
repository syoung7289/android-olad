<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FindImageActivity"
    tools:showIn="@layout/activity_find_image">

    <Button
        android:id="@+id/findImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="findImageArchive"
        android:background="@drawable/camera_icon"
        android:text="@string/find"
        android:textColor="#171717"
        android:shadowColor="#7D7D7D"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1" />

    <Button
        android:id="@+id/replaceArrow"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/findImage"
        android:background="@drawable/line_arrow" />

    <Button
        android:id="@+id/replaceImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:onClick="findImage"
        android:longClickable="true"
        android:layout_toRightOf="@id/replaceArrow"
        android:textColor="#7D7D7D"
        android:tag="activityImage"/>
    <Button
        android:id="@+id/replaceImage2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="findImage"
        android:longClickable="true"
        android:layout_below="@id/findImage"
        android:layout_marginTop="30dp"
        android:textColor="#7D7D7D"
        android:tag="activityImage"/>
    <Button
        android:id="@+id/replaceImage3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="findImage"
        android:longClickable="true"
        android:layout_below="@id/findImage"
        android:layout_toRightOf="@id/replaceImage2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#7D7D7D"
        android:tag="activityImage"/>
    <Button
        android:id="@+id/replaceImage4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="findImage"
        android:longClickable="true"
        android:layout_below="@id/findImage"
        android:layout_toRightOf="@id/replaceImage3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#7D7D7D"
        android:tag="activityImage"/>

</RelativeLayout>
