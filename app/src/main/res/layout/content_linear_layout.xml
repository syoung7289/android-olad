<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/main_layout"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_gravity="center"
        android:id="@+id/linear_row_container">

        <LinearLayout
            android:id="@+id/linear_horizontal_row_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/dynamicMenuButton0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:longClickable="true"
                android:textColor="#7D7D7D"/>
            <Button
                android:id="@+id/dynamicMenuButton1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:longClickable="true"
                android:textColor="#7D7D7D"/>
            <Button
                android:id="@+id/dynamicMenuButton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:longClickable="true"
                android:textColor="#7D7D7D"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_horizontal_row_2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/dynamicMenuButton3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:longClickable="true"
                android:textColor="#7D7D7D"/>
            <Button
                android:id="@+id/dynamicMenuButton4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:longClickable="true"
                android:textColor="#7D7D7D"/>
            <Button
                android:id="@+id/dynamicMenuButton5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:longClickable="true"
                android:textColor="#7D7D7D"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>