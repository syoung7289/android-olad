    <Button
        android:id="@+id/sandbox_showDynamicPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/title_activity_show_dynamic_menu"
        android:textAppearance="@style/ButtonMediumFontStyle"
        android:onClick="openShowDynamicPopupPane"
        android:layout_below="@id/sandbox_recordSound" />

    <Button
        android:id="@+id/sandbox_showLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/title_activity_linear_layout"
        android:textAppearance="@style/ButtonMediumFontStyle"
        android:onClick="openLinearLayoutPane"
        android:layout_below="@id/sandbox_showDynamicPopup" />

    <Button
        android:id="@+id/sandbox_flushPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
