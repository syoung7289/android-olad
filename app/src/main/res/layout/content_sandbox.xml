        android:id="@+id/sandbox_findSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/find_sound"
        android:textAppearance="@style/ButtonMediumFontStyle"
        android:onClick="findSound"
        android:layout_below="@id/sandbox_largeImage" />

    <Button
        android:id="@+id/sandbox_recordSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/title_activity_record_sound"
        android:textAppearance="@style/ButtonMediumFontStyle"
        android:onClick="openRecordSound"
        android:layout_below="@id/sandbox_findSound" />

